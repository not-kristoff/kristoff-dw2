        position:relative;

  }
  .hero-image{
position:absolute;
z-index:-10;
 left:0;
    width:100%;
    height:100%;
    object-fit: cover; 
  }
  .hero-text-block{
  z-index:100;
    background-color: rgba(255, 255, 255, 0.719);
    width:400px;
  }
}

